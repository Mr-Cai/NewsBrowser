<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/news_head_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/icon"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="158"
        tools:layout_conversion_wrapWidth="226" />

    <TextView
        android:id="@+id/news_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:maxLines="2"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/news_head_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_wrapHeight="56"
        tools:layout_conversion_wrapWidth="0"
        tools:text="美国时代周刊" />

    <TextView
        android:id="@+id/news_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/news_head_img"
        app:layout_constraintEnd_toEndOf="@+id/news_title"
        app:layout_constraintStart_toStartOf="@+id/news_title"
        tools:ignore="RelativeOverlap"
        tools:layout_conversion_wrapHeight="43"
        tools:layout_conversion_wrapWidth="32"
        tools:text="2019-1-20" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_wrapHeight="1"
        tools:layout_conversion_wrapWidth="1059" />

</androidx.constraintlayout.widget.ConstraintLayout>